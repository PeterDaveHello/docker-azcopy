#!/bin/sh

if [ "latest" = "$DOCKER_TAG" ]; then
    DOCKER_TAG=$(curl -sLo- https://api.github.com/repos/Azure/azure-storage-azcopy/releases | grep tag_name | head -n 1 | awk -F'"' '{print $4}' | sed 's/^v//g')
fi

docker build --build-arg AZCOPY_VERSION="$DOCKER_TAG" -f "$DOCKERFILE_PATH" -t "$IMAGE_NAME" .
